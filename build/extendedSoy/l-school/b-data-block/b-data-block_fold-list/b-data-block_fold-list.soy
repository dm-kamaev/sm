{namespace sm.lSchool.bDataBlockFoldList.Template}
/**
* @param params
* @extends sm.lSchool.bDataBlock.Template
* @constructor
*/
{template .base}
    {call .init}
        {param params: [
            'header': $params.header,
            'headerType': $params.headerType ?
                        $params.headerType :
                        3,
            'modifier': $params.modifier ?
                        'b-data-block_fold-list' + $params.modifier :
                        'b-data-block_fold-list',
            'content': $params.content
        ] /}
    {/call}
{/template}
/**
* @param params
*/
{template .content autoescape="strict" kind="html"}
     <ul class="b-data-block__content">
        {foreach $class in  $params.content}
            {if $class.items and
             length($class.items) > 0}
                {call .ratingItem_}
                    {param params: [
                        'name': $class.name,
                        'items': $class.items
                    ] /}
                {/call}
            {/if}
        {/foreach}
    </ul>
{/template}
/**
* @param params
*/
{template .ratingItem_ autoescape="strict" kind="html"}
    <li class="b-data-block__item">
        <a  class="b-data-block__item-content
                   b-data-block__item-content_text-color_red">
            {$params.name}
        </a>
        {if $params.items}
            <div class="b-data-block__number">
                {length($params.items)}
            </div>
        {/if}

        {if $params.items}
            <ul class="b-data-block__list
                       i-utils__hidden">
                {foreach $item in $params.items}
                <li class="b-data-block__list-item">&mdash; {$item}</li>
                {/foreach}
            </ul>
        {/if}
    </li>
{/template}
/**
* @param params
*/
{template .header autoescape="strict" kind="html"}
     <div class="b-data-block__line"></div>
     {if $params.headerType == 2}
        <h2 class="b-data-block__header">{$params.header}</h2>
     {else}
        <h3 class="b-data-block__header">{$params.header}</h3>
     {/if}
{/template}
/**
* @param params
*/
{template .init autoescape="strict" kind="html"}
    <div class="b-data-block
        {if $params.modifier}
            {sp}{$params.modifier}
        {/if}
    ">

        //Header section
        {if $params.header}
            {call .header}
                {param params: [
                    'header': $params.header
                ] /}
            {/call}
        {/if}

        //Content  section
        {if $params.content}
            {call .content data="all" /}
        {/if}
    </div>
{/template}
