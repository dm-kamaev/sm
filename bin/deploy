#!/bin/bash
# run on deploy-node4.lan

lib_dir=node_modules/deployment
gulp="./node_modules/.bin/gulp"

scriptpath=$(dirname $0)
cd $scriptpath/../

echo "Prepare for packaging"
cd frontend/
npm install
$gulp build
cd ../

echo "Run packaging"
package=$package target_host=$target_host env=$env lib_dir=$lib_dir remote_user=cityboom packaging_release_number=$packaging_release_number source $lib_dir/bin/deploy
