{
    "rules": {
        "indent": [
            1,
            4
        ],
        "quotes": [
            1,
            "single"
        ],
        "linebreak-style": [
            1,
            "unix"
        ],
        "semi": [
            1,
            "always"
        ],
        "no-console": [
            1
        ]
    },
    "ecmaFeatures": {
        "modules": true
    },
    "env": {
        "node": true,
        "es6": true
    },
    "extends": "eslint:recommended"
}
