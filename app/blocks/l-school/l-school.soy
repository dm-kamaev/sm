/**
 * Comments block
 * @param? params {{
 *     data: {
 *         comments: [{
 *             author: string,
 *             rank: string,
 *             text: string,
 *             sections: [{
 *                 name: string,
 *                 value: int
 *             }]
 *         }]
 *     }
 * }}
 * @private
 */
{template .comments_ autoescape="strict" kind="html"}
    {let $comments: $params.data.comments /}

    <div id="comments" class="l-school__section l-school__section_comments">
        {if $comments and length($comments) > 0}
            <div class="l-school__comments-title">
                {call .contentTitle_}
                    {param image: '123.png' /}
                    {param text: 'Комментарии пользователей' /}
                    //TODO: uncomment
                    // {param buttonAlt: 'надпись2' /}
                {/call}
            </div>
            <div class="l-school__comments-content">
                {call sm.lSchool.bComments.Template.base}
                    {param params: [
                        'comments': $comments
                    ] /}
                {/call}
            </div>
        {else}
            <div class="l-school__horisontal-line"></div>
            <div class="l-school__comments-placeholder">
                Никто пока не оставил отзыв об этой школе.{sp}
                <span class="l-school__comments-placeholder-link">
                    Станьте первым!
                </span>
            </div>
        {/if}
        <div class="l-school__horisontal-line"></div>
    </div>
{/template}
