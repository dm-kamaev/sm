{namespace sm.lSchool.Template}

/**
 * Defaul school view
 * @param params {
 *    data: [
 *        id: number,
 *        schoolName: string,
 *        schoolType: string,
 *        schoolDescr: string,
 *        features: string,
 *        schoolQuote: string,
 *        directorName: string,
 *        classes: string,
 *        kindergarten: bool,
 *        extendedDayCost: string,
 *        dressCode: bool,
 *        social: list<[
 *            name: string,
 *            href: string
 *        ]>,
 *        sites: list<[
 *            name: string,
 *            href: string,
 *            link: string
 *        ]>,
 *        contacts: [
 *            stages: list<[
 *                name: string,
 *                addresses: list<[
 *                    title: string,
 *                    description: string,
 *                    metroStations: list<[
 *                        id: number,
 *                        name: string
 *                    ]>
 *                ]>
 *            ]>,
 *            phones: list<string>
 *        ],
 *        specializedClasses: list<[
 *            name: string
 *            items: list<string>
 *        ]>,
 *        activities: list<[
 *            name: string
 *            items: list<string>
 *        ]>,
 *        comments: list<[
 *            author: string,
 *            rank: string,
 *            text: string,
 *            sections: list<[
 *                name: string,
 *                value: int
 *            ]>
 *        ]>,
 *        addresses: list<
 *           list<number>
 *        >,
 *        ratings: list<[
 *            name<string>,
 *            place<number>,
 *            href<string>
 *        ]>,
 *        score: list<[
 *            name: string,
 *            value: number
 *        ]>,
 *        totalScore: number,
 *        reviewCount: number,
 *        isCommented: bool,
 *        popularSchools: ?list<[
 *            id: ?number,
 *            url: ?string,
 *            name: ?string,
 *            description: ?string,
 *            metro: ?list<string>,
 *            totalScore: ?number
 *        ]>,
 *         authSocialLink: ?{
 *             vk: ?string,
 *             fb: ?string
 *         },
 *        user: object
 *     ],
 *     searchText: ?string,
 *     config: ?{
 *         staticVersion: ?string,
 *         year: ?number,
 *         analyticsId: ?string,
 *         csrf: ?string
 *     }
 * }
 */
{template .school autoescape="strict" kind="html"}
    {let $content kind="html"}
        {call .content_ data="all" /}
    {/let}

    {call sm.iLayout.Template.layout}
        {param params: [
            'data': [
                'title': $params.data?.schoolName + ' на Школах Мела',
                'content': $content,
                'header': [
                    'searchText': $params.searchText,
                    'url': '/',
                    'searchRedirect': true
                ],
                'landingScript': '/l-school.js',
                'evercookie': true
            ],
            'config': [
                'modifier': 'stendhal',
                'page': 'school',
                'staticVersion': $params.config?.staticVersion,
                'year':  $params.config?.year,
                'analyticsId': $params.config?.analyticsId,
                'csrf': $params.config?.csrf
            ]
        ] /}
    {/call}
{/template}


/**
 * @param? params {?}
 */
{template .content_ autoescape="strict" kind="html"}
    {let $data: [
        'id': $params?.data?.id,
        'schoolName': $params?.data?.schoolName,
        'isCommented': $params?.data?.isCommented,
        'user': $params?.data?.user
    ] /}

    <div class="l-school"
         data-params="{call goog.json.serialize data="$data" /}">
         {call .innerContent_ data="all" /}
    </div>

    {call sm.bMap.Template.api}{/call}
{/template}


/**
 * @param? params {?}
 */
{template .innerContent_ autoescape="strict" kind="html"}
    {call .description_ data="all" /}
    {call .feedback_ data="all" /}

    <div class="l-school__cleaner"></div>

    <div class="l-school__column l-school__column_left">
        {call .score_ data="all" /}
        {call .map_ data="all" /}
        {call .extra_ data="all" /}
    </div>

    <div class="l-school__column l-school__column_right">
        {call .features_ data="all" /}
        {call .addresses_ data="all" /}
        {call .additionalInfo_ data="all" /}
    </div>

    {call .results_ data="all" /}
    {call .comments_ data="all" /}
    {call .popular_ data="all" /}
{/template}


/**
 * School name + school description
 * @param? params {{
 *     data: [
 *         schoolName: string,
 *         schoolDescr: string
 *     ]
 * }}
 */
{template .description_ autoescape="strict" kind="html"}
    <div class="l-school__section l-school__section_description">
        <div class="l-school__name">
            {$params.data.schoolName}
        </div>
        {if $params.data.metroStations}
            <div class="l-school__metro-stations">
                {call sm.iFactory.TemplateFactoryStendhal.INSTANCE.render}
                    {param params: [
                        'type': 'icon',
                        'renderParams': [
                            'data': [
                                'type': 'metro'
                            ],
                            'config': [
                                'customClasses':  'l-school__metro-icon'
                            ]
                        ]
                    ]/}
                {/call}
                {foreach $metro in $params.data.metroStations}
                    {$metro}
                    {if not isLast($metro)},{sp}{/if}
                {/foreach}
            </div>
        {/if}
        {if $params.data.schoolDescr}
            <div class="l-school__description">
                {$params.data.schoolDescr}
            </div>
        {/if}
    </div>
{/template}


/**
 * Feedback button
 * @param? params {
 *     data: {
 *         comments: ?[{
 *             author: string,
 *             rank: string,
 *             text: string,
 *             sections: [{
 *                 name: string,
 *                 value: int
 *             }]
 *         }],
 *         ratings: ?[{
 *             name: string,
 *             place: number,
 *             href: string
 *         }],
 *         isCommented: bool
 *     }
 * }
 */
{template .feedback_ autoescape="strict" kind="html"}
    <div class="l-school__section l-school__section_feedback">
        {call sm.iFactory.TemplateFactoryStendhal.INSTANCE.render}
            {param params: [
                'type': 'button',
                'renderParams': [
                    'data': [
                        'content': 'Оставить отзыв'
                    ],
                    'config': [
                        'customClasses': [
                            'g-button_feedback-opener'
                        ],
                        'isDisabled': $params?.data?.isCommented
                    ]
                ]
            ]/}
        {/call}

        // A necessary measure due to the adaptability
        {call .extra_ data="all"}
            {param clone: true /}
        {/call}

        {call .schoolAnchors_}
            {param params: [
                'data': [
                    'comments': $params?.data?.comments,
                    'ratings': $params?.data?.ratings
                ]
            ]/}
        {/call}

        {call .authSocial_}
            {param params: [
                'authUrl': $params?.data?.authSocialLink
            ]/}
        {/call}

        {call .modalInaccuracy_ data="all" /}
    </div>
{/template}

/**
 * schoolAnchors
 * @param params {
 *     data: {
 *         comments: list<{}>,
 *         ratings: list <{}>
 *     }
 * }
 */
{template .schoolAnchors_ private="true"}
    <div class="l-school__anchors">
        {if $params?.data?.comments?.length > 0}
            {call .commentsAnchor_}
                {param params: [
                    'sumComments': $params?.data?.comments?.length
                ]/}
            {/call}
        {/if}

        {if $params?.data?.ratings?.length > 0}
            {call .resultsEgeGiaAnchor_ /}
        {/if}
    </div>
    <div class="l-school__link l-school__link_inaccuracy">
        {call sm.bLink.Template.base}
            {param params: [
                'data': [
                    'name': 'Сообщить о неточности'
                ]
            ]/}
        {/call}
    </div>
{/template}

/**
 * comments anchor
 * @param? params {
 *     sumComments: ?number
 * }
 */
{template .commentsAnchor_ private="true"}
    {let $commentContent kind="html"}
        <span class="l-school__anchor-value">
            {$params?.sumComments}
        </span>
    {/let}
    {call sm.bLink.Template.base}
        {param params:[
            'data': [
                'name': 'Комментарии',
                'url': '#comments',
                'content': $commentContent,
            ],
            'config': [
                'customClasses': 'l-school__anchor'
            ]
        ]/}
    {/call}
{/template}

/**
 * results EGE and GIA anchor
 */
{template .resultsEgeGiaAnchor_ private="true"}
    {call sm.bLink.Template.base}
        {param params: [
            'data': [
                'name': 'Результаты олимпиад и экзаменов',
                'url': '#results'
            ],
            'config': [
                'customClasses': 'l-school__anchor'
            ]
        ]/}
    {/call}
{/template}

/**
 * Template feedback modal
 * @param? params {
 *     config: ?{
 *         csrf: ?string
 *     }
 * }
 */
{template .modalInaccuracy_ private="true"}
    {let $csrf: $params?.config?.csrf /}

    {call cl.iFactory.FactoryManager.INSTANCE.renderTemplate}
        {param params: [
            'factory': 'stendhal',
            'type': 'feedback-modal',
            'renderParams': [
                'config': [
                    'type': 'mistake',
                    'url': '/api/user-feedback',
                    'csrf': $csrf
                ]
            ]
        ]/}
    {/call}
{/template}

/**
 * Auth modal
 * @param params {
 *     authUrl: ?{
 *         vk: ?string,
 *         fb: ?string
 *     }
 * }
 */
{template .authSocial_ private="true"}
    {call sm.iFactory.TemplateFactoryStendhal.INSTANCE.render}
        {param params: [
            'type': 'auth-social-modal',
            'renderParams': [
                'data': [
                    'socials': [
                        [
                            'type': 'fb',
                            'url': $params?.authUrl?.fb
                        ],
                        [
                            'type': 'vk',
                            'url': $params?.authUrl?.vk
                        ]
                    ]
                ]
            ]
        ]/}
    {/call}
{/template}


/**
 * Score section
 * @param? params {{
 *     data: {
 *         score: [{
 *             name: string,
 *             value: number
 *         }],
