{namespace sm.bSmSubheader.Template}


/**
 * @typedef {{
 *     logo: {
 *         imgUrl: string,
 *         altText: ?string,
 *         linkUrl: ?string
 *     },
 *     rowLinks: (sm.bSmRowLinks.Template.Params|undefined),
 *     dropdownLinks: (sm.gDropdown.TemplateListLinks.Params|undefined),
 *     links: ({
 *         nameL: string,
 *         nameM: string,
 *         nameS: (string|undefined),
 *         url: string,
 *         theme: (string|undefined)
 *     }|undefined),
 *     search: {
 *         placeholder: (string|undefined),
 *         redirect: boolean,
 *         pageAlias: string,
 *         sourceUrl: ?string,
 *         disableSearchBehavior: boolean
 *     },
 *     favorites: sm.bSmFavorite.Template.Params.Data
 * }} sm.bSmSubheader.Template.Params.Data
 */


/**
 * @typedef {{
 *     entityType: string,
 *     bottomLine: ?boolean,
 *     theme: (string|undefined),
 *     stylizationModifier: string
 * }} sm.bSmSubheader.Template.Params.Config
 */


/**
 * @typedef {{
 *     data: sm.bSmSubheader.Template.Params.Data,
 *     config: sm.bSmSubheader.Template.Params.Config
 * }} sm.bSmSubheader.Template.Params
 */


 /**
 * Constructor
 * @param params {{
 *     data: sm.bSmSubheader.Template.Params.Data,
 *     config: sm.bSmSubheader.Template.Params.Config
 * }}
 * @extends cl.iControl.Template
 * @factory sm.iCloblFactory.FactoryStendhal
 * @constructor
 */
{template .subheader}
    {call .init data="all"/}
{/template}

/**
 * @override
 */
{template .NAME}
    smSubheader
{/template}


/**
 * Body
 * @param params {{
 *     data: sm.bSmSubheader.Template.Params.Data
 * }}
 * @override
 */
{template .body}
    <div class="{call .rootClass/}__body">
        {call .sectionHamburgerMenu_ /}
        {call .sectionLogo_ data="all" /}
        {call .sectionLinks_ data="all" /}
        {call .sectionSearch_ data="all" /}
    </div>
{/template}


/**
 * Section Logo
 * @param params {{
 *     data: {
 *         logo: {
 *             imgUrl: string,
 *             altText: ?string,
 *             linkUrl: ?string
 *         }
 *     }
 * }}
 */
{template .sectionLogo_}
    <div class="{call .rootClass/}__section
                {sp}{call .rootClass/}__section_logo
                {sp}i-animate">
        {call .logo_ data="all" /}
    </div>
{/template}


/**
 * Section hamburger menu template
 */
{template .sectionHamburgerMenu_}
    <div class="{call .rootClass /}__section
                {sp}{call .rootClass /}__section_hamburger-menu">
        {call .hamburgerMenu_ /}
    </div>
{/template}


/**
 * Hamburger menu template
 */
{template .hamburgerMenu_}
    <div class="{call .rootClass /}__hamburger-menu">
        {call .renderChild}
            {param params: [
                'type': 'icon-svg',
                'renderParams': [
                    'data': [
                        'type': 'hamburger-menu'
                    ],
                    'config': [
                        'customClasses': ''
                    ]
                ]
            ]/}
        {/call}
    </div>
{/template}


/**
 * Section links
 * @param params {{
 *     data: {
 *         rowLinks: (sm.bSmRowLinks.Template.Params|undefined),
 *         dropdownLinks: (sm.gDropdown.TemplateListLinks.Params|undefined),
 *         links: ({
 *             nameL: string,
 *             nameM: string,
 *             nameS: (string|undefined),
 *             url: string,
 *             theme: (string|undefined)
 *         }|undefined),
 *         favorites: sm.bSmFavorite.Template.Params.Data
 *     }
 * }}
 */
{template .sectionLinks_}
    <div class="{call .rootClass/}__section
                {sp}{call .rootClass/}__section_links
                {sp}i-animate">
        {call .linksSearch_ data="all" /}
        {call .userControls_ data="all" /}
    </div>
{/template}


/**
 * Section search
 * @param params {{
 *     data: {
 *         search: {
 *             placeholder: ?string,
 *             redirect: ?boolean,
 *             pageAlias: string,
 *             sourceUrl: ?string
 *         }
 *     }
 * }}
 */
{template .sectionSearch_}
    <div class="{call .rootClass/}__section
            {sp}{call .rootClass/}__section_search">

        {call .searchL_ data="all" /}
        {call .searchS_ data="all" /}
    </div>
{/template}


/**
 * Search links
 * @param params {{
 *     data: {
 *         rowLinks: (sm.bSmRowLinks.Template.Params|undefined),
 *         dropdownLinks: (sm.gDropdown.TemplateListLinks.Params|undefined),
 *         links: ({
 *             nameL: string,
 *             nameM: string,
 *             nameS: (string|undefined),
 *             url: string,
 *             theme: (string|undefined)
 *         }|undefined)
 *     }
 * }}
 */
{template .linksSearch_}
    {if $params.data.rowLinks}
        {call .rowLinks_ data="all" /}
    {/if}

    {if $params.data.dropdownLinks}
        {call .dropdownLinks_ data="all" /}
    {elseif $params.data.link}
        {call .linkWithIcon_ data="all" /}
    {/if}
{/template}


/**
 * Links line
 * @param params {{
 *     data: {
 *         rowLinks: sm.bSmRowLinks.Template.Params
 *     }
 * }}
 */
{template .rowLinks_}
    <div class="{call .rootClass/}__search-links{sp}
                {call .rootClass/}__search-links_row">
        {call .renderChild}
            {param params: [
                'type': 'smRowLinks',
                'renderParams': $params.data.rowLinks
            ]/}
        {/call}
    </div>
{/template}


/**
 * Customizable link
 * @param params {{
 *     data: {
 *         links: {
 *             nameL: string,
 *             nameM: string,
 *             nameS: (string|undefined),
 *             url: string,
 *             theme: (string|undefined)
 *         }
 *     }
 * }}
 */
{template .linkWithIcon_}
    <div class="{call .rootClass/}__search-links{sp}
                {call .rootClass/}__search-links_icon">
        {call .linkSearch_}
            {param params: [
                'data': [
                    'name': $params.data.link.nameL,
                    'url': $params.data.link.url
                ],
                'config': [
                    'size': 'l',
                    'theme': $params.data.link.theme
                ]
            ]/}
        {/call}

        {call .linkSearch_}
            {param params: [
                'data': [
                    'name': $params.data.link.nameM,
                    'url': $params.data.link.url
                ],
                'config': [
                    'size': 'm',
                    'theme': $params.data.link.theme
                ]
            ]/}
        {/call}

        {call .linkSearch_}
            {param params: [
                'data': [
                    'name': $params.data.link.nameS ?: $params.data.link.nameM,
                    'url': $params.data.link.url
                ],
                'config': [
                    'size': 's',
                    'theme': $params.data.link.theme
                ]
            ]/}
        {/call}
    </div>
{/template}


/**
 * Dropdown links
 * @param params {{
 *     data: {
 *         dropdownLinks: sm.gDropdown.TemplateListLinks.Params
 *     }
 * }}
 */
{template .dropdownLinks_}
    <div class="{call .rootClass/}__search-links{sp}
                {call .rootClass/}__search-links_dropdown">
        {call .renderChild}
            {param params: [
                'type': 'dropdown-list-links',
                'renderParams': $params.data.dropdownLinks
            ]/}
        {/call}
    </div>
{/template}


/**
 * Links for authorization and favorite
 * @param params {{
 *     data: {
 *         favorites: sm.bSmFavorite.Template.Params.Data
 *     }
 * }}
 */
{template .userControls_}
    <div class="{call .rootClass/}__user-controls{sp}
                {cl.iUtils.Utils.CssClass.HIDDEN}">
        {call .favorite_ data="all" /}
    </div>
{/template}


/**
 * template favorite
 * @param params {{
 *     data: {
 *          favorites: sm.bSmFavorite.Template.Params.Data
 *     },
 *     config: {
 *         stylizationModifier: string
 *     }
 * }}
 */
{template .favorite_}
    <div class="{call .rootClass/}__user-control
                {sp}{call .rootClass/}__user-control_favorite
                {sp}{cl.iUtils.Utils.CssClass.HIDDEN}">
        <div class="{call .rootClass/}__favorite-content">
            {call .renderChild}
                {param params: [
                    'type': 'smFavorite',
                    'renderParams': [
                        'data': $params.data?.favorites,
                        'config': [
                            'isUserAuthorized': $params.data.user ? true : false
                        ]
                    ]
                ]/}
            {/call}
        </div>
    </div>
{/template}


/**
 * Logo
 * @param params {{
 *     data: {
 *         logo: {
 *             imgUrl: string,
 *             altText: ?string,
 *             linkUrl: ?string
 *         }
 *     }
 * }}
 */
{template .logo_}
    {let $href kind="attributes"}
        {if $params.data.logo?.linkUrl}
            href="{$params.data.logo?.linkUrl}"
        {/if}
    {/let}

    <div class="{call .rootClass/}__logo i-animate">
        <a class="{call .rootClass/}__logo-link" {$href}>
            {call .logoImg_ data="all"/}
        </a>
    </div>
{/template}


/**
 * Logo img
 * @param params {{
 *     data: {
 *         logo: {
 *             imgUrl: string,
 *             altText: ?string
 *         }
 *     }
 * }}
 */
{template .logoImg_}
    {let $altText kind="attributes"}
        {if $params.data.logo?.altText}
            {sp}alt="{$params.data.logo.altText}"
        {/if}
    {/let}

    <img class="{call .rootClass/}__logo-img"
        src="{$params.data.logo.imgUrl}" {$altText}>
{/template}


/**
 * Search field for display size l
 * @param params {{
 *     data: {
 *         search: {
 *             placeholder: ?string,
 *             redirect: ?boolean,
 *             pageAlias: string,
 *             sourceUrl: ?string
 *         }
 *     },
 *     config: {
 *         entityType: string
 *     }
 * }}
 */
{template .searchL_}
    {let $customClasses kind="html"}
        {call .rootClass/}__search{sp}
        {call .rootClass/}__search_visible_l
    {/let}

    {let $data: [
        'sourceUrl': $params.data?.search?.sourceUrl
    ] /}

    {let $config: [
        'entityType': $params.config.entityType,
        'showSearchIcon': true,
        'disableSearchBehavior': $params.data.search?.disableSearchBehavior,
        'height': 'l'
    ] /}

    {call sm.bSearch.Template.base}
        {param params: [
            'placeholder': $params.data?.search?.placeholder,
            'theme': 'min',
            'customClasses': $customClasses,
            'redirect': $params.data?.search?.redirect,
            'pageAlias': $params.data?.search?.pageAlias,
            'inputSize': 'min',
            'data': $data,
            'config': $config
        ]/}
    {/call}
{/template}


/**
 * Search field for display size s
 * @param params {{
 *     data: {
 *         search: {
 *             placeholder: ?string,
 *             redirect: ?boolean,
 *             pageAlias: string,
 *             sourceUrl: ?string
 *         }
 *     },
 *     config: {
 *         entityType: string
 *     }
 * }}
 */
{template .searchS_}
    {let $customClasses kind="html"}
        {call .rootClass/}__search{sp}
        {call .rootClass/}__search_visible_s
    {/let}

    {let $data: [
        'sourceUrl': $params.data?.search?.sourceUrl
    ] /}

    {let $config: [
        'entityType': $params.config.entityType,
        'disableSearchBehavior': $params.data.search?.disableSearchBehavior,
        'height': 'xxl'
    ] /}

    {call sm.bSearch.Template.base}
        {param params: [
            'placeholder': $params.data?.search?.placeholder,
            'theme': 'foldable',
            'customClasses': $customClasses,
            'redirect': $params.data?.search?.redirect,
            'pageAlias': $params.data?.search?.pageAlias,
            'inputSize': 'min',
            'data': $data,
            'config': $config
        ]/}
    {/call}
{/template}


/**
 * Search links for display certain size
 * @param params {{
 *     data: {
 *         url: (string|undefined),
 *         name: (string|undefined)
 *     },
 *     config: {
 *         size: string,
 *         theme: (string|undefined)
 *     }
 * }}
 */
{template .linkSearch_}
    {let $content kind="html"}
        <div class="{call .rootClass/}__search-link-content">
            {call .iconLinkSearch_ /}
            {$params.data?.name ?: ''}
        </div>
    {/let}

    {let $customClasses kind="html"}
        {call .rootClass/}__link-search
    {/let}

    <div class="{call .rootClass/}__search-link{sp}
                {call .rootClass/}__search-link_visible_{$params.config.size}">
        {call .renderChild}
            {param params: [
                'type': 'smLink',
                'renderParams': [
                    'data': [
                        'url': $params.data?.url,
                        'content': $content
                    ],
                    'config': [
                        'size': 'l',
                        'theme': $params.config.theme ?: 'default',
                        'customClasses': [$customClasses]
                    ]
                ]
            ]/}
        {/call}
    </div>
{/template}


/**
 * Icon for search link
 */
{template .iconLinkSearch_}
    <div class="{call .rootClass/}__icon {call .rootClass/}__icon_search-link">
        {call .renderChild}
            {param params: [
                'type': 'icon-svg',
                'renderParams': [
                    'data': [
                        'type': 'list'
                    ],
                    'config': [
                        'customClasses': ''
                    ]
                ]
            ]/}
        {/call}
    </div>
{/template}


/**
 * Root css class
 * @override
 */
{template .rootClass}
    b-sm-subheader
{/template}


/**
 * Css classes
 * @param params {{
 *     config: {
 *         bottomLine: ?boolean,
 *         entityType: string
 *     }
 * }}
 * @override
 */
{template .additionalClasses}
    {call .rootClass/}_entity-type_{$params.config?.entityType}

    {if $params?.config?.bottomLine}
        {sp}{call .rootClass/}_line_bottom
    {/if}
{/template}
