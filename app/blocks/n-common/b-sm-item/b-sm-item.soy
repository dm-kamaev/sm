{namespace sm.bSmItem.Template}


/**
 * @typedef {{
 *     id: number,
 *     type: string,
 *     name: {
 *         light: string,
 *         bold: ?string
 *     },
 *     imageUrl: (string|undefined),
 *     alias: ?string,
 *     score: ?number,
 *     description: (string|undefined),
 *     metro: ?Array<{
 *         id: number,
 *         name: string
 *     }>,
 *     area: ?Array<{
 *         id: number,
 *         name: string
 *     }>,
 *     category: string,
 *     url: ?string
 * }} sm.bSmItem.Template.Params.Data
 */


 /**
 * @typedef {{
 *     enableCover: boolean,
 *     stylizationModifier: string,
 *     customClasses: ?Array<string>,
 *     theme: ?string
 * }} sm.bSmItem.Template.Params.Config
 */


 /**
 * Constructor
 * @param params {{
 *     data: sm.bSmItem.Template.Params.Data,
 *     config: sm.bSmItem.Template.Params.Config
 * }}
 * @extends cl.iControl.Template
 * @constructor
 */
{template .item}
    {call .init data="all"/}
{/template}


/**
 * Body
 * @param params {{
 *     data: sm.bSmItem.Template.Params.Data,
 *     config: sm.bSmItem.Template.Params.Config
 * }}
 * @override
 */
{template .body}
    {call .sections data="all" /}
{/template}


/**
 * sections
 * @param params {{
 *     data: sm.bSmItem.Template.Params.Data,
 *     config: sm.bSmItem.Template.Params.Config
 * }}
 * @protected
 */
{template .sections}
    {if $params.config.enableCover}
        {call .sectionGroupCover data="all" /}
    {/if}

    {call .sectionGroupInfo data="all" /}
{/template}


/**
 * Cover section group
 * @param params {{
 *     data: {
 *         name: {
 *             light: string,
 *             bold: (string|undefined)
 *         },
 *         imageUrl: (string|undefined)
 *     }
 * }}
 * @protected
 */
{template .sectionGroupCover kind="html"}
    {let $classes kind="html"}
        {call .rootClass/}__section-group{sp}
        {call .rootClass/}__section-group_cover
    {/let}

    <div class="{$classes}">
        {call .sectionCover data="all" /}
    </div>
{/template}


/**
 * Iformation section group
 * @param params {{
 *     data: sm.bSmItem.Template.Params.Data
 *     config: sm.bSmItem.Template.Params.Config
 * }}
 * @protected
 */
{template .sectionGroupInfo kind="html"}
    {let $classes kind="html"}
        {call .rootClass/}__section-group{sp}
        {call .rootClass/}__section-group_info
    {/let}

    <div class="{$classes}">
        {call .sectionHeader data="all" /}
        {if $params.config.theme != 'minimal'}
            {call .sectionDescription data="all" /}
            {call .sectionDetails data="all" /}
        {/if}
    </div>
{/template}

/**
 * @param params {{
 *     data: {
 *         name: {
 *             light: string,
 *             bold: (string|undefined)
 *         },
 *         imageUrl: (string|undefined)
 *     }
 * }}
 * @protected
 */
{template .sectionCover}
    <div class="{call .rootClass/}__section{sp}
                {call .rootClass/}__section_cover">
        {call .image data="all"/}
    </div>
{/template}


/**
 * Image item
 * @param params {{
 *     data: {
 *         name: {
 *             light: string,
 *             bold: (string|undefined)
 *         },
 *         imageUrl: (string|undefined)
 *     }
 * }}
 * @protected
 */
{template .image}
    {let $imageUrl kind="html"}
        {if $params.data.imageUrl}
            {$params.data.imageUrl}
        {else}
            /static/images/n-common/b-sm-item/b-sm-item_entity/images/placeholder.png
        {/if}
    {/let}

    {let $description kind="html"}
        {$params.data.name.light}
        {if $params.data.name.bold}
            {sp}{$params.data.name.bold}
        {/if}
    {/let}

    {let $url kind="html"}
        {if $params.data.url}
            {$params.data.url}
        {else}
            /{$params.data.alias}
        {/if}
    {/let}

    <a class="{call .rootClass/}__cover-link" href="{$url}">

        <img class="{call .rootClass/}__cover-image"
            src="{$imageUrl}"
            alt="{$description}"
        >
    </a>
{/template}


/**
 * Header
 * @param params {{
 *     data: {
 *         name: {
 *             light: string,
 *             bold: ?string
 *         },
 *         score: ?number
 *     },
 *     config: {
 *         theme: string
 *     }
 * }}
 * @protected
 */
{template .sectionHeader}
    <div class="{call .rootClass/}__section{sp}
                {call .rootClass/}__section_header">
        {call .name data="all" /}
        {if $params.config.theme != 'minimal'}
            {call .estimates data="all" /}
        {/if}
    </div>
{/template}


/**
 * Description
 * @param params {{
 *     data: {
 *         description: (string|undefined)
 *     }
 * }}
 * @protected
 */
{template .sectionDescription}
    {let $classes kind="html"}
        {call .rootClass/}__section{sp}
        {call .rootClass/}__section_description

        {if not $params.data?.description}
            {sp}i-utils__hidden
        {/if}
    {/let}

    <div class="{$classes}">
        {call .description data="all" /}
    </div>
{/template}


/**
 * Details
 * @param params {{
 *     data: {
 *         metro: ?Array<{
 *             id: number,
 *             name: string
 *         }>,
 *         area: ?Array<{
 *             id: number,
 *             name: string
 *         }>
 *     }
 * }}
 * @protected
 */
{template .sectionDetails}
    <div class="{call .rootClass/}__section{sp}
                {call .rootClass/}__section_details">
        {call .location data="all" /}
    </div>
{/template}


/**
 * Item name
 * @param params {{
 *     data: {
 *         name: {
 *             light: string,
 *             bold: ?string
 *         }
 *     },
 *     config: {
 *         theme: string
 *     }
 * }}
 * @protected
 */
{template .name}
    <div class="{call .rootClass/}__name">
        {let $name kind="html"}
            {$params.data.name.light}

            {if $params.data.name?.bold}
                {$params.data.name.bold}
            {/if}
        {/let}

        {let $url kind="html"}
            {if $params.data.url}
                {$params.data.url}
            {else}
                /{$params.data.alias}
            {/if}
        {/let}

        {let $customClasses kind="html"}
            {call .rootClass/}__link-name
        {/let}

        {let $size kind="html"}
            {if $params.config.theme == 'minimal'}
                l
            {else}
                7xl
            {/if}
        {/let}

        {let $theme kind="html"}
            {if $params.config.theme == 'minimal'}
                default
            {else}
                dark
            {/if}
        {/let}

        {call .renderChild}
            {param params: [
                'type': 'smLink',
                'renderParams': [
                    'data': [
                        'id': $params.data.id,
                        'content': $name,
                        'url': $url
                    ],
                    'config': [
                        'customClasses': [$customClasses],
                        'theme': $theme,
                        'size': $size
                    ]
                ]
            ]/}
        {/call}
    </div>
{/template}


/**
 * Description
 * @param params {{
 *     data: {
 *         description: (string|undefined)
 *     }
 * }}
 */
{template .description}
    {if $params.data?.description}
        <div class="{call .rootClass/}__description">
            {call soydata.VERY_UNSAFE.ordainSanitizedHtml
                data="$params.data.description" /}
        </div>
    {/if}
{/template}


/**
 * Template estimated parameters
 * @param params {{
 *     data: {
 *         score: ?number
 *     }
 * }}
 * @protected
 */
{template .estimates}
    <div class="{call .rootClass/}__estimates">
        {call .score data="all" /}
    </div>
{/template}


/**
 * Score
 * @param params {{
 *     data: {
 *         score: ?number
 *     }
 * }}
 * @protected
 */
{template .score}
    {let $classes kind="html"}
        {call .rootClass/}__score

        {if not $params.data.score}
            {sp}{cl.iUtils.Utils.CssClass.HIDDEN}
        {/if}
    {/let}

    <div class="{$classes}">
        {call .renderChild}
            {param params: [
                'type': 'smMark',
                'renderParams': [
                    'data': [
                        'value': $params.data.score
                    ],
                    'config': [
                        'size': 'm'
                    ]
                ]
            ]/}
        {/call}
    </div>
{/template}


/**
 * Location
 * @param params {{
 *     data: {
 *         type: string,
 *         metro: ?Array<{
 *             id: number,
 *             name: string
 *         }>,
 *         area: ?Array<{
 *             id: number,
 *             name: string
 *         }>
 *     }
 * }}
 * @protected
 */
{template .location}
    {if $params.data?.metro and length($params.data?.metro)}
        {call .metro data="all" /}
    {elseif $params.data?.area and length($params.data?.area)}
        {call .area data="all" /}
    {/if}
{/template}


/**
 * Metro badge
 * @param params {{
 *     data: {
 *         type: string,
 *         metro: ?Array<{
 *             id: number,
 *             name: string
 *         }>
 *     }
 * }}
 * @protected
 */
{template .metro}
    <div class="{call .rootClass/}__badge {call .rootClass/}__badge_metro">
        {call .renderChild}
            {param params: [
                'type': 'smBadge',
                'renderParams': [
                    'data': [
                        'items': $params.data.metro,
                    ],
                    'config': [
                        'searchType': 'metroId',
                        'searchByName': true,
                        'iconName': 'metro',
                        'iconType': 'svg',
                        'entityType': $params.data.type
                    ]
                ]
            ]/}
        {/call}
    </div>
{/template}


/**
 * Area badge
 * @param params {{
 *     data: {
 *         type: string,
 *         area: ?Array<{
 *             id: number,
 *             name: string
 *         }>
 *     }
 * }}
 * @protected
 */
{template .area}
    <div class="{call .rootClass/}__badge {call .rootClass/}__badge_area">
        {call .renderChild}
            {param params: [
                'type': 'smBadge',
                'renderParams': [
                    'data': [
                        'items': $params.data.area,
                    ],
                    'config': [
                        'searchType': 'areaId',
                        'searchByName': true,
                        'iconName': 'location',
                        'entityType': $params.data.type
                    ]
                ]
            ]/}
        {/call}
    </div>
{/template}


/**
 * Css classes
 * @param params {{
 *     data: {
 *         type: string
 *     },
 *     config: {
 *         enableCover: (boolean|undefined)
 *     }
 * }}
 * @override
 */
{template .additionalClasses}
    {call .rootClass/}_type_{$params.data.type}{sp}

    {if $params?.config?.enableCover}
        {call .rootClass/}_cover_enable
    {/if}
{/template}



/**
 * Root css class
 * @override
 */
{template .rootClass}
    b-sm-item
{/template}


/**
 * Attributes
 * Important to write kind="attributes" when overrides
 * @param params {{
 *     data: {
 *         id: number,
 *         type: string,
 *         name: {
 *             light: string,
 *             bold: ?string
 *         },
 *         category: string
 *         alias: ?string,
 *         url: ?string
 *     },
 *     config: sm.bSmItem.Template.Params.Config
 * }}
 * @override
 */
{template .attributes kind="attributes"}
    {sp}data-params="
        {call cl.iUtils.Utils.stringify}
            {param json: quoteKeysIfJs([
                'id': $params.data.id,
                'name': $params.data.name.light + ($params.data.name.bold ?: ''),
                'type': $params.data.type,
                'category': $params.data.category
            ]) /}
        {/call}"
{/template}
