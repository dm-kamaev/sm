{namespace sm.lDoc.nDemo.bBlockDiagram.Template}

/**
* doc
*/
{template .preview}
    {call sm.bDiagram.Template.base}
        {param params: [
            'data': [
                [
                    'label': 'Label1',
                    'value': 7
                ],
                [
                    'label': 'Label2',
                    'value': 3
                ]
            ],
            'maxValue': 10
        ]/}
    {/call}
