{
    "formatters": {
        "simple": {
            "format": "\n%(levelname)s %(message)s",
            "colorize": true
        },
        "details": {
            "format": "[%(date)s] %(levelname)s %(message)s",
            "strip": true
        }
    },
    "handlers": {
        "terminal": {
            "formatter": "simple",
            "class": "intel/handlers/console"
        },
        "logfile": {
            "level": 50,
            "formatter": "details",
            "class": "intel/handlers/file",
            "file": "log/schools.log"
        }
    },
    "loggers": {
        "app": {
            "handlers": ["logfile", "terminal"]
        },
        "express": {
            "handlers": ["terminal"]
        },
        "sequelize": {
            "handlers": ["terminal"]
        }
    }
}
