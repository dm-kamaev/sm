{
    "extends": "standard",
    "plugins": [
        "google-camelcase"
    ],
    "parserOptions": {
        "ecmaVersion": 6,
        "ecmaFeatures": {
        },
        "sourceType": "script"
    },
    "env": {
        "es6": true,
        "node": true
    },
    "rules": {
        "camelcase": "off",
        "google-camelcase/google-camelcase": "error",
        "semi": ["error", "always"],
        "max-len": ["error", 80],
        "quotes": ["warn", "single"],
        "indent": ["warn", 4],
        "space-before-function-paren": ["error", "never"],
        "block-scoped-var": "error",
        "no-unused-vars": "warn",
        "spaced-comment": "warn",
        "no-multiple-empty-lines": ["error", {max: 3}],
        "comma-dangle": ["error", "only-multiline"],
        "require-jsdoc": ["error",
            {
            "require": {
                "FunctionDeclaration": true,
                "MethodDefinition": true,
                "ClassDeclaration": false
            }
        }],
        "valid-jsdoc": ["error", {
            "requireReturn": false,
            "requireParamDescription": false,
            "requireReturnDescription": false,
            "requireReturnType": true,
            "prefer": {
                "return": "return"
            },
            "preferType": {
                "String": "string",
                "object": "object"
             }
        }],
        "no-inner-declarations": ["error", "functions"],
        "no-ex-assign": "error",
        "no-eval": "error",
        "no-with": "error",
        "no-multi-str": "error",
        "operator-linebreak": ["error", "after"],
        "global-require": "off",
        "no-mixed-requires": "warn",
        "no-new-require": "error",
        "no-path-concat": "error",
        "eqeqeq": "off",
        "no-delete-var": "off",
        "one-var": "off",
    },
}


