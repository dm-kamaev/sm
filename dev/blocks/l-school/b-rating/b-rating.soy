{namespace sm.lSchool.bRating.Template}

/**
 * rating view
 * @param params {
 *          marks: [],
 *          averageMark
 *        }
 */
{template .base autoescape="strict" kind="html"}
    <div class="b-rating">
        <div class="b-rating__marks">
            <div class="b-rating__section">
                <div class="b-rating__mark b-rating__mark_selected">
                    {$params.averageMark}
                </div>
            </div>
            {foreach $mark in $params.marks}
                <div class="b-rating__section">
                    <div class="b-rating__mark">
                        {$mark}
                    </div>
                </div>
            {/foreach}
        </div>
        <div class="b-rating__sections">
            <div class="b-rating__section">
                <div class="b-rating__section-name">
                    Средний балл
                </div>
            </div>
            <div class = "b-rating__section">
                <div class="b-rating__section-name">
                    Образование
                </div>
             </div>
            <div class = "b-rating__section">
                <div class="b-rating__section-name">
                    Педагоги
                </div>
             </div>
            <div class = "b-rating__section">
                <div class="b-rating__section-name">
                    Доступность
                </div>
             </div>
            <div class = "b-rating__section">
                <div class="b-rating__section-name">
                    Атмосфера
                </div>
             </div>
        </div>
        {call gorod.bBouton.BoutonTemplate.render}
            {param params: [
                'label': 'Оставить отзыв',
                'state': ['pressed':'true'],
                'style': [
                    'theme': 'default',
                    'color': 'red',
                    'size': 'extralarge',
                    'width': 'block',
                    'borderWidth': 'l',
                    'borderRadius': 'none',
                    'uppercase': 'true'
                ]
            ]/}
        {/call}
    </div>
{/template}
